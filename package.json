{
  "name": "trunotesv2",
  "private": true,
  "version": "1.0.8",
  "description": "TruNotes v2 - A powerful note-taking app",
  "author": "TruNotes Team",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "tsc -p electron/tsconfig.json && wait-on tcp:5173 && electron .",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\"",
    "electron:build": "vite build && tsc -p electron/tsconfig.json && electron-builder"
  },
  "build": {
    "appId": "com.trunotes.v2",
    "productName": "TruNotes v2",
    "directories": {
      "output": "release_v7"
    },
    "files": [
      "dist",
      "dist-electron",
      "package.json"
    ],
    "win": {
      "icon": "public/logo.png",
      "target": [
        "zip",
        "portable",
        "nsis"
      ]
    },
    "extraResources": [
      {
        "from": "external_assets",
        "to": "external_assets",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@capacitor/android": "^8.0.2",
    "@capacitor/app": "^8.0.0",
    "@capacitor/browser": "^8.0.0",
    "@capacitor/cli": "^8.0.2",
    "@capacitor/core": "^8.0.2",
    "@capacitor/preferences": "^8.0.0",
    "@capgo/capacitor-native-biometric": "^8.3.3",
    "date-fns": "^4.1.0",
    "electron-squirrel-startup": "^1.0.1",
    "framer-motion": "^12.29.0",
    "idb": "^8.0.3",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^33.4.11",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}